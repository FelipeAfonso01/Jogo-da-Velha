<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.felipe.jogodavelha.MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.example.felipe.jogodavelha.MainActivity"
        >

        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="left"
            android:id="@+id/bo11"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/button"
            android:layout_centerHorizontal="true"
            android:id="@+id/bot12" />

        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/bot13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot13" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/bot21"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot21" />
        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot22" />
        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot23" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot31" />

        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/bot32" />
        <Button
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/bot33" />
    </LinearLayout>

    <TextView
        android:text="Vez do Jogador: X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jogador"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:text="Vitórias jogador X : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/venceu_x"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:text="Vitórias jogador O :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/venceu_o"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:text="Número de empates:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empate"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"/>


</LinearLayout>
